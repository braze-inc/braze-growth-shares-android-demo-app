<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical" android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/cellImage"
            android:layout_height="275dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="2dp"/>
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/text_margin"
              android:layout_marginRight="@dimen/text_margin"
              android:id="@+id/cellTitle" android:textSize="10pt"/>
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/text_margin"
              android:layout_marginRight="@dimen/text_margin"
              android:id="@+id/cellDescription" android:textSize="6pt"/>
    <TextView android:layout_width="75dp" android:layout_height="wrap_content" android:layout_gravity="end"
              android:id="@+id/price" android:textSize="8pt"/>
</LinearLayout>