<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:textSize="10pt" android:text="Shopping Cart" android:textColor="@color/black"
                  android:textAlignment="center"/>
        <ListView
                android:id="@+id/list_view"
                android:layout_height="700dp"
                android:layout_width="match_parent"
                android:divider="@android:color/white"
                android:dividerHeight="5dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="10dp"/>
    </LinearLayout>
    <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/couponImage"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_above="@+id/purchaseButton"
            android:layout_marginBottom="45dp" />
    <Button android:id="@+id/purchaseButton" android:textAlignment="center"
            android:layout_marginBottom="75dp"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textSize="10pt"
            android:gravity="center" android:textColor="@color/white" android:background="#00a237"
            android:layout_height="75dp"
            android:layout_width="wrap_content"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
    />
</RelativeLayout>